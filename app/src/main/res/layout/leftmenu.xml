<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:background="#eeeeee"
              android:clickable="true"
              android:orientation="vertical"
              android:weightSum="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:background="#64b5f6"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/leftimageView"
            android:layout_width="78dp"
            android:layout_height="86dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icard_icon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I卡通"
            android:id="@+id/textView5"
            android:layout_weight="0.81"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaDDDDDD">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#eeeeee"
        android:gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView9"
                android:src="@mipmap/xuanfuchuang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="悬浮窗"
                android:id="@+id/xuanfuchuang"
                android:layout_weight="0.26"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView8"
                android:src="@mipmap/erweima"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="二维码"
                android:id="@+id/erweima"
                android:layout_weight="0.26"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:src="@mipmap/icon_search_noresult"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="关    于"
                android:id="@+id/guanyu"
                android:layout_weight="0.26"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:src="@mipmap/umeng_update_close_bg_tap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="退    出"
                android:id="@+id/tuichu"
                android:layout_weight="0.26"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>